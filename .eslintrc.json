{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors"
    ],
    "plugins": [
        "import"
    ],
    "rules": {
        "react/prop-types": 0,
        "linebreak-style": 1
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "node": {
                "paths": [
                    "src"
                ],
                "extensions": [
                    ".js",
                    ".jsx",
                    ".json"
                ]
            }
        }
    }
}